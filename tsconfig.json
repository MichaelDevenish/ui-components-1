{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "scripthost",
      "dom"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./es",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@Domain/*": ["src/domain/*"],
      "@Common/*": ["src/common/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "declarations.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.md",
    "dist",
    "es"
  ]
}
