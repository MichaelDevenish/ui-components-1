root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 80

[*.js]
indent_size = 2

[*.{scss,sass}]
indent_size = 2

[{package.json,composer.json}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.sql]
indent_size = 2
indent_style = tab